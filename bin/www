      // console.log(epoch_time.getTime(), epoch_time, 'the epoch')
      let kv, mw, mvar, amp, equipment_id, line_name, variant;
      // loop over the lines or units array
      const equip = lines ? lines : units ? units : undefined
      equip.forEach(line => {
          equipment_id = line.id;
